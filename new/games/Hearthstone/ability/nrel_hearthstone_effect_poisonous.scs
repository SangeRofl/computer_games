<- rrel_key_sc_element: ...(*
	<- explanation;;
	=> nrel_main_idtf: 
        [Примечания] (* <- lang_ru;; *);
        [Notes](* <-lang_en;; *);;
	<= nrel_using_constants:
    {   
        nrel_hearthstone_effect_divine_shield;
        concept_hearthstone_card_mechanics;
		concept_card;
        concept_card_minion;
        concept_card_weapon

    };;
	<= nrel_sc_text_translation: ...
	(*
		-> [Предоставление Ядовитых миньонам с вызванными эффектами, которые наносят урон миньонам, заставит эти эффекты сами стать Ядовитыми.] (* <- lang_ru;; *);

            [Granting Poisonous to minions with triggered effects that deal damage to minions will cause those effects to become Poisonous themselves.] (* <- lang_en;; *);;
	*);;
    	<= nrel_sc_text_translation: ...
	(*
		-> [Предательство может быть особенно эффективным при использовании Ядовитого миньона; Любой соседний миньон без Божественного щита будет убит эффектом Яда.] (* <- lang_ru;; *);

            [Betrayal can be especially effective when used on a Poisonous minion; any adjacent minion without Divine Shield will be killed by the Poisonous effect.] (* <- lang_en;; *);;
	*);;
        <= nrel_sc_text_translation: ...
    (*
		-> [Подобно ядовитым миньонам, Укус Смерти, зачарованный Оружием Envenom, уничтожит всех миньонов на доске, кроме тех, которые защищены Божественным Щитом.] (* <- lang_ru;; *);

            [Minions which deal damage as a Deathrattle which are adapted to be Poisonous will destroy every minion the Deathrattle damages.] (* <- lang_en;; *);;
